<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.puzzleduck.StalinPhone"
    android:versionCode="1"
    android:versionName="1.0"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-sdk android:minSdkVersion="10" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE"></uses-permission>
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.PROCESS_OUTGOING_CALLS"/>

    <application
        android:icon="@drawable/icon"
        android:label="@string/app_name" >
        <activity
            android:label="@string/app_name"
            android:name=".StalinPhoneActivity" >
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <receiver android:name="StalinReceiver">
            <intent-filter>
                <action android:name="android.intent.action.NEW_OUTGOING_CALL"> </action>
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.PHONE_STATE"> </action>
            </intent-filter>
            
        </receiver>
        <service android:name=".StalinTransService" android:label="@string/stalin_trans_service_label"></service>
        <service android:label="@string/stalin_rec_service_label" android:name=".StalinRecService"></service>
        <service android:name=".StalinStopRecService" android:label="@string/stalin_rec_service_label"></service>
    </application>

</manifest>